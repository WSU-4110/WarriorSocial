<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserTutorial">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/homeview"
                android:layout_width="222dp"
                android:layout_height="303dp"
                app:srcCompat="@drawable/Home" />

            <ImageView
                android:id="@+id/orgsview"
                android:layout_width="222dp"
                android:layout_height="303dp"
                app:srcCompat="@drawable/orgs" />

            <ImageView
                android:id="@+id/discview"
                android:layout_width="222dp"
                android:layout_height="303dp"
                app:srcCompat="@drawable/Disc" />

            <ImageView
                android:id="@+id/notiview"
                android:layout_width="222dp"
                android:layout_height="303dp"
                app:srcCompat="@drawable/Not" />

            <ImageView
                android:id="@+id/settview"
                android:layout_width="222dp"
                android:layout_height="303dp"
                app:srcCompat="@drawable/Sett" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>