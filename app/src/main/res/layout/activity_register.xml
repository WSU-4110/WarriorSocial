<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WSUGreen"
    android:orientation="vertical"
    tools:context=".ui.login.RegisterActivity">

    <!-- Enter Email line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_enterEmail"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:gravity="start"
            android:text="Enter Email:"
            android:textColor="@color/WSUGold"
            android:textSize="28dp"
            android:textStyle="bold">
        </TextView>

        <EditText
            android:id="@+id/et_userEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@color/WSUDrkGreen"
            android:gravity="start"
            android:hint="user@wayne.edu"
            android:padding="5dp"
            android:textColor="@color/WSUGold"
            android:textSize="20sp"
            android:textStyle="bold">
        </EditText>
    </LinearLayout>

    <!-- Set Password Line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_setPassword"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:gravity="start"
            android:text="Set Password:"
            android:textColor="@color/WSUGold"
            android:textSize="26dp"
            android:textStyle="bold">
        </TextView>

        <EditText
            android:id="@+id/et_userPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@color/WSUDrkGreen"
            android:gravity="start"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textColor="@color/WSUGold"
            android:textSize="20sp"
            android:textStyle="bold">
        </EditText>
    </LinearLayout>

    <!-- Create New Account Line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Create New Account">
        </Button>

    </LinearLayout>
</LinearLayout>



