<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WSUGreen"
    android:orientation="vertical"
    tools:context=".ui.login.RegisterActivity">

    <!-- Create New Account line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="262dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:text="Create New Account"
            android:textColor="@color/WSUGold"
            android:textSize="34dp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <!-- Enter Email line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_enterEmail"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:gravity="start"
            android:text="Enter Email:"
            android:textColor="@color/WSUGold"
            android:textSize="26dp"
            android:textStyle="bold">
        </TextView>

        <EditText
            android:id="@+id/et_userEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@color/WSUDrkGreen"
            android:gravity="start"
            android:hint="user@wayne.edu"
            android:padding="5dp"
            android:textColor="@color/WSUGold"
            android:textSize="20sp"
            android:textStyle="bold">
        </EditText>
    </LinearLayout>

    <!-- Set Password Line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_setPassword"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:gravity="start"
            android:text="Set Password:"
            android:textColor="@color/WSUGold"
            android:textSize="26dp"
            android:textStyle="bold">
        </TextView>

        <EditText
            android:id="@+id/et_userPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@color/WSUDrkGreen"
            android:gravity="start"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textColor="@color/WSUGold"
            android:textSize="20sp"
            android:textStyle="bold">
        </EditText>
    </LinearLayout>


    <!-- Enter User Name Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:gravity="start"
            android:text="Set User Name:"
            android:textColor="@color/WSUGold"
            android:textSize="24dp"
            android:textStyle="bold">
        </TextView>

        <EditText
            android:id="@+id/et_studentUserName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@color/WSUDrkGreen"
            android:gravity="start"
            android:hint="User Name"
            android:padding="5dp"
            android:textColor="@color/WSUGold"
            android:textSize="20sp"
            android:textStyle="bold">
        </EditText>
    </LinearLayout>

    <!-- Account Type Radio Button Group -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="start"
            android:padding="5dp"
            android:text="Account Type:"
            android:textColor="@color/WSUGold"
            android:textSize="26sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!--
        <RadioGroup
            android:id="@+id/rb_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_student"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Student" />

            <RadioButton
                android:id="@+id/rb_so"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Student Organization" />

        </RadioGroup>
        !-->
    </LinearLayout>


    <!-- Create New Account Line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/roundedcorners"
            android:backgroundTint="@color/WSUGold"
            android:textSize="16sp"
            android:padding="10dp"
            android:text="Create New Account">
        </Button>

    </LinearLayout>
</LinearLayout>



